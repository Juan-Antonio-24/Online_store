# Usar una imagen base con JDK para construir el proyecto
FROM eclipse-temurin:17-jdk-jammy AS builder

WORKDIR /app

# Copiar todos los archivos necesarios
COPY . .

# Ejecutar Maven para empaquetar la aplicaci贸n
RUN ./mvnw clean package -DskipTests

# Usar una imagen base con JRE para ejecutar la aplicaci贸n
FROM eclipse-temurin:17-jre-jammy AS final

WORKDIR /app

# Copiar el archivo JAR desde el contenedor de construcci贸n
COPY --from=builder /app/target/OnlineStore-0.0.1-SNAPSHOT.jar /app/app.jar

# Exponer el puerto 8080
EXPOSE 8080

# Ejecutar la aplicaci贸n Spring Boot
ENTRYPOINT ["java", "-Duser.timezone=GMT", "-jar", "/app/app.jar"]
